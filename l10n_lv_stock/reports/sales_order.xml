<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report_picking_main">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="stock.report_picking" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<report
    id="report_picking"
    string="Picking Operations with Signatures"
    model="stock.picking"
    report_type="qweb-pdf"
    file="l10n_lv_stock.report_picking_main"
    name="l10n_lv_stock.report_picking_main"
    print_report_name="'Delivery Note - %s' % (object.name)"
/>

<template id="report_picking_document" inherit_id="stock.report_picking">

    <xpath expr="//div[hasclass('page')]" position="inside">
        <div>
            <style>
                .sig .sigcell {
                    border-bottom: 1px solid black;
                    width: 92%;
                    margin: 0 3%;
                }
                table.sig {
                    width: 100%;
                    margin: 20px 0;
                }
                .sig tr {
                    vertical-align: bottom;
                    position: relative;
                }
                .sig tr td {
                    padding-top: 12px;
                }
                .sig tr td div {
                    margin: 0 4%;
                }
                .sig tr td:nth-child(odd) {
                    width: 20%;
                }
                .sig tr td:nth-child(even) {
                    width: 30%;
                }
            </style>
            <table class="sig" style="page-break-inside: avoid">
                <tr>
                    <td>
                        Issuer<br/>
                        Firstname, lastname
                    </td>
                    <td>
                        <div>&amp;nbsp;</div>
                        <div class="sigcell"><span t-esc="user_id.name"/></div>
                    </td>
                    <td>
                        Reciever<br/>
                        Firstname, lastname
                    </td>
                    <td>
                        <div>&amp;nbsp;</div>
                        <div class="sigcell">&amp;nbsp;</div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><div t-esc="datetime.date.today().strftime('%Y.%m.%d')"/></td>
                    <td></td>
                    <td>
                            <div class="sigcell"/>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                            <div class="sigcell">&amp;nbsp;</div>
                    </td>
                    <td></td>
                    <td>
                            <div class="sigcell"/>
                    </td>
                </tr>
            </table>
        </div>
    </xpath>

</template>

</odoo>
